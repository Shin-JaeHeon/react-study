{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "./src"
  ]
}